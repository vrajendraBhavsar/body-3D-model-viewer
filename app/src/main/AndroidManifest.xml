<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="org.andresoviedo.dddmodel2"
    android:versionCode="33"
    android:versionName="4.0.0">

    <uses-sdk
        tools:overrideLibrary="android.support.compat, android.arch.lifecycle" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
	    android:largeHeap="true"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name="org.mi.app.model3D.MainActivity"
	        android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mi.app.model3D.view.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName="org.mi.app.model3D.MainActivity" >
        </activity>
        <activity
            android:name="org.mi.util.view.TextActivity"
            android:label="@string/title_activity_text"
            android:parentActivityName="org.mi.app.model3D.MainActivity" >
        </activity>
        <activity
            android:name="org.mi.app.model3D.view.ModelActivity"
            android:label="@string/title_activity_model"
            android:parentActivityName="org.mi.app.model3D.MainActivity" >

            <!-- android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" -->
        </activity>


        <!-- Demos -->
        <activity
            android:name="org.mi.app.model3D.demo.GlyphsDemoActivity"
            android:label="@string/title_activity_model"
            android:parentActivityName="org.mi.app.model3D.MainActivity" >
        </activity>
        <activity
            android:name="org.mi.app.model3D.demo.EarCutDemoActivity"
            android:label="@string/title_activity_model"
            android:parentActivityName="org.mi.app.model3D.MainActivity" >
        </activity>


        <!-- polybool -->
        <activity
            android:name="org.mi.polybool.demo.WebActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>

    </application>

</manifest>
